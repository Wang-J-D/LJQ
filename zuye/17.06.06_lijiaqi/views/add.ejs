<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>添加用户</title>
	<link rel="stylesheet" href="/bootstrap/dist/css/bootstrap.css">
	<script src="/jquery/dist/jquery.js"></script>
	<script src="/bootstrap/dist/js/bootstrap.js"></script>
	<script src="/holderjs/holder.js"></script>
	<style>
		.container-fluid{
			padding:0px;
			margin:0px;
		}
		.left{
			height:500px;
			border-right:solid 1px #ddd;
		}
	</style>
</head>
<body>
	<div class="container-fluid">
		<!-- 头部 start -->
		<header>
			<div class="col-md-2">
				<img src="holder.js/200x100?bg=#aed" alt="">
			</div>
		</header>
		<div class="clearfix"></div>
		<hr>
		<!-- 头部 end -->

		<section>
			<!-- 左侧 start -->
			<div class="left col-md-2">
				<div class="list-group">
				  <a href="/user" class="list-group-item active">
				    用户管理
				  </a>
				</div>
			</div>
			<!-- 左侧 end -->
				
			<!-- 右侧 start -->
			<div class="col-md-10">
				<div class="col-md-8 col-md-offset-2">
				<form method="post" action="/user/insert">
				  <div class="form-group">
				    <label for="exampleInputEmail1">邮箱</label>
				    <input type="email" class="form-control" name="email" id="exampleInputEmail1" >
				  </div>
				  <div class="form-group">
				    <label for="exampleInputEmail1">用户名</label>
				    <input type="text" class="form-control" name="name" id="exampleInputEmail1" >
				  </div>
				  <div class="form-group">
				    <label for="exampleInputPassword1">密码</label>
				    <input type="password" name="password" class="form-control" id="exampleInputPassword1" >
				  </div>
				  <div class="form-group">
				    <label for="exampleInputPassword1">确认密码</label>
				    <input type="password" name="repassword" class="form-control" id="exampleInputPassword1" >
				  </div>
				  <button type="submit" class="btn btn-default">添加</button>
				</form>
				</div>
			</div>
			<!-- 右侧 end -->

		</section>

	</div>
</body>
</html>